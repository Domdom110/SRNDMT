<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mortonthompsond2.srndmt.UserProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/welcome"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:textColor="#311414"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:text="welcome"
        android:textColor="#311414"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="Add Stats"
        android:textColor="#311414"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addStats"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1"
        android:text="View Stats"
        android:textColor="#311414"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewWorkouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewStats"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:selectAllOnFocus="false"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1"
        android:text="View Workouts"
        android:textColor="#311414"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="209dp"
        android:layout_height="234dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="78dp"
        android:src="@drawable/srndmt" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:layout_toEndOf="@+id/welcome"
        android:text="Logout" />
</RelativeLayout>
