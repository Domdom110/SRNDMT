<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mortonthompsond2.srndmt.MainActivity">

    <EditText
        android:id="@+id/nametab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Name" />


    <Button
        android:id="@+id/updatetab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_alignTop="@+id/viewtab3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/background_light"/>

    <EditText
        android:id="@+id/Typetab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"
        android:layout_below="@+id/nametab3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:id="@+id/Descriptiontab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:layout_below="@+id/Typetab3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />


    <EditText
        android:id="@+id/addresstab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_below="@+id/Descriptiontab3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/viewtab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:layout_alignBaseline="@+id/Deletetab3"
        android:layout_alignBottom="@+id/Deletetab3"
        android:layout_toRightOf="@+id/Deletetab3"
        android:layout_toEndOf="@+id/Deletetab3"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/Deletetab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_alignBaseline="@+id/inserttab3"
        android:layout_alignBottom="@+id/inserttab3"
        android:layout_toRightOf="@+id/inserttab3"
        android:layout_toEndOf="@+id/inserttab3"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/inserttab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Insert"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="121dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/background_light"/>
</RelativeLayout>
